<p style="color: green"><%= notice %></p>

<h1>Bike rides</h1>
<%= button_to(
      "Log Out",
      destroy_user_session_path,
      method: :delete
    ) %>
<% if @bike_rides.empty? %>
  <p>No rides yet</p>
<% else %>
  <div id="bike_rides">
    <% @bike_rides.each do |bike_ride| %>
      <%= render bike_ride %>
      <p>
        <%= link_to "Show this bike ride", bike_ride %>
      </p>
    <% end %>
  </div>
<%end %>


<%= link_to "New bike ride", new_bike_ride_path %>
